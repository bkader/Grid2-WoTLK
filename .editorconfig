root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false

[*.{lua,xml,toc,luacheckrc}]
indent_style = tab
tab_width = 4

[*/lib/**.{lua,xml,toc}]
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,gitattributes,gitignore}]
indent_style = space
indent_size = 2

[*.md]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = false
insert_final_newline = true